<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:paddingTop="150dp"
    android:background="@drawable/wsa_bg"
    android:alpha="1"
    >

    <TextView
        android:id="@+id/wsaTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="WSA"
        android:textColor="@color/blue"
        android:textSize="50sp"
        android:layout_marginBottom="20dp"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/loginEt"
        />

    <EditText
        android:id="@+id/loginEt"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:textColor="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingTop="20dp"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@id/wsaTv"
        app:layout_constraintBottom_toTopOf="@id/passwordEt"
        android:textColorHint="@color/one"
        />

    <EditText
        android:id="@+id/passwordEt"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:textColor="@color/blue"
        android:inputType="textPassword"
        android:paddingTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loginEt"
        app:layout_constraintBottom_toTopOf="@id/loginBtn"
        android:textColorHint="@color/one"
        />

    <Button
        android:id="@+id/signUpBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="Sign In"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toStartOf="@id/loginBtn"
        app:layout_constraintStart_toStartOf="@+id/passwordEt"
        app:layout_constraintTop_toBottomOf="@id/passwordEt"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="Login"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/passwordEt"
        app:layout_constraintStart_toEndOf="@id/signUpBtn"
        app:layout_constraintTop_toBottomOf="@id/passwordEt"
        tools:ignore="MissingConstraints" />

